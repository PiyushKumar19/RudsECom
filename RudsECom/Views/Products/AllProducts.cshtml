@model IEnumerable<RudsECom.Models.ProductsModel>

@{
    ViewData["Title"] = "AllProducts";
}

<h1>AllProducts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Product Image")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.PhotosUrl" class="img-thumbnail" style="width:100px" alt="Responsive image">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProdName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProdPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @*<a asp-action="Details" asp-route-id="@item.ProductId">Details</a> *@
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.ProductId"
                           class="btn btn-sm btn-outline-secondary" id="btn-change">Edit</a> |

                            <a asp-route="ProductDetailsRoute" asp-route-id="@item.ProductId"
                           class="btn btn-sm btn-outline-secondary" id="btn-change">View Details</a>

                            <a asp-action="Delete" asp-route-id="@item.ProductId"
                           class="btn btn-sm btn-outline-secondary" id="btn-change">Delete</a>
                        </div>
                    </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    #btn-change {
        background: lightseagreen;
        float: left;
        box-shadow: 0 0 1px #ccc;
        -webkit-transition: all 0.5s ease-in-out;
        border: 0px;
        color: #fff;
    }

        #btn-change:hover {
            -webkit-transform: scale(1.1);
            background: #31708f;
        }
</style>